<h1>GeekTwitter</h1>
<h3>Tweet詳細</h3>
<div class="tweet">
  <p><%= @tweet.body %></p>
  <p><%= @tweet.created_at %></p>
   <% if user_signed_in? %>
     <% if current_user.already_liked?(@tweet) %>
         <%= button_to tweet_like_path(id: @tweet.id, tweet_id: @tweet.id), method: :delete do %>
            <p>いいねを取り消す</p><%= @tweet.likes.count %>
        <% end %>
     <% else %>
        <%= button_to tweet_likes_path(id: @tweet.id, tweet_id: @tweet.id), data: { turbo_method: :post }  do %>
            <p>いいね</p><%= @tweet.likes.count %>
        <% end %>
     <% end %>
<% else %>
    <p>いいねの数 = </p><%= @tweet.likes.count %>
<% end %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@tweet, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>

  <%= link_to "Tweet一覧に戻る", tweets_path %>